{{!-- index.hbs --}}
<center>
   <a class="btn btn-primary mb-3" href="/ChildrenToy/add">Add new product</a>
   <a class="btn btn-success" href="/ChildrenToy/deleteall" onclick="return confirm('Are you sure to delete all products?');">Delete all products</a>
</center>

<div class="row mt-3 mb-3">
   <div class="col-md-4">
      <form action="/ChildrenToy/search" method="post">
         <input class="form-control" type="search" name="keyword" required placeholder="Search by name">
      </form>
   </div>
</div>
<table class="table table-info">
   <tr>
      <th>Product ID</th>
      <th>Name</th>
      <th>Trademark</th>
      <th>Price</th>
      <th>Image</th>
      <th>Describe</th>
      <th>Brand</th>
      <th>Menu</th>
   </tr>
   {{#each ChildrenToyList }}
   <tr>
      <td>{{ id }}</td>
      <td>{{ name }}</td>
      <td>{{ Trademark }}</td>
      <td>{{ Price }}</td>
      <td><img src="{{ image }}" width="100" height="100"></td>
      <td>{{ Describe }}</td>
      <td>{{ brand.name }}</td>
      <td>
         <a class="btn btn-warning" href="/ChildrenToy/edit/{{ _id }}">Edit</a>
         <a class="btn btn-danger" href="/ChildrenToy/delete/{{ _id }}" onclick="return confirm('Are you sure to delete this product?');">Delete</a>
      </td>
   </tr>
   {{/each}}
</table>